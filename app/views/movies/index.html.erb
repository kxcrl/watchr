<%= form_with(url: movies_path, method: :get, local: true, class: "relative") do |form| %>
  <%= form.text_field :search, value: params[:search], class: "mb-4 py-2 pl-4 pr-10 rounded-lg bg-slate-100 focus:outline-none focus:bg-white" %>
  <%= form.submit "Search", class: "hidden" %>
  <div class="absolute top-0 left-[17rem] mt-[.6rem] mr-4">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
    </svg>
  </div>
<% end %>

<%= render partial: 'shared/movie_list', locals: { movies: @movies, favorited_movie_ids: @favorited_movie_ids } %>
